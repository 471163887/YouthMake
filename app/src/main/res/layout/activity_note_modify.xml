<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.fury.youthmake.activity.NoteModifyActivity">

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/et_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:roundedCorners="true"
            app:bootstrapBrand="primary"
            android:layout_weight="1"
            android:hint="写下我要完成的小事吧 !"
            android:gravity="center"
            android:visibility="gone"/>
        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/et_note_most"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:roundedCorners="true"
            app:bootstrapBrand="danger"
            android:layout_weight="1"
            android:hint="写下优先级最高的事情吧 !"
            android:gravity="center"
            android:visibility="gone"/>
        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/et_note_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:roundedCorners="true"
            app:bootstrapBrand="danger"
            android:layout_weight="1"
            android:hint="写下第三重要的事情吧 !"
            android:gravity="center"
            android:visibility="gone"/>
        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/et_note_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:roundedCorners="true"
            app:bootstrapBrand="danger"
            android:layout_weight="1"
            android:hint="写下最重要的小事吧 !"
            android:gravity="center"
            android:visibility="gone"/>

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/bnt_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bootstrapBrand="success"
            app:bootstrapSize="lg"
            app:buttonMode="regular"
            app:roundedCorners="true"
            android:layout_margin="10dp"
            android:text="提交修改" />

</LinearLayout>
